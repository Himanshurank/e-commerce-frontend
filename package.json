{
  "name": "E-commerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf .next out dist build",
    "clean:all": "rm -rf .next out dist build node_modules package-lock.json",
    "analyze": "ANALYZE_BUNDLE=true npm run build",
    "check-all": "npm run type-check && npm run lint:strict && npm run format:check",
    "fix-all": "npm run type-check && npm run lint:fix && npm run format",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@types/js-cookie": "^3.0.6",
    "framer-motion": "^12.23.22",
    "js-cookie": "^3.0.5",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.20.5",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{json,md,css,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,md,css,yml,yaml}": [
      "git add"
    ]
  }
}
